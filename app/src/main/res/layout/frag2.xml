<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    android:baselineAligned="false"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/breakfast_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#131313"
                android:text="@string/breakfast"
                android:textColor="#FE7501"
                app:layout_constraintStart_toStartOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                app:strokeColor="#232323"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/dinner_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="217dp"
                android:layout_weight="1"
                android:backgroundTint="#131313"
                android:text="@string/dinner"
                android:textColor="#FE7501"
                app:layout_constraintEnd_toStartOf="@+id/brink_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="#232323"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/brink_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="88dp"
                android:layout_weight="1"
                android:backgroundTint="#131313"
                android:text="@string/drink"
                android:textColor="#FE7501"
                app:layout_constraintBaseline_toBaselineOf="@+id/dinner_btn"
                app:layout_constraintStart_toEndOf="@+id/caffe_btn"
                app:strokeColor="#232323"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/lunch_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#131313"
                android:text="@string/lunch"
                android:textColor="#FE7501"
                app:layout_constraintBaseline_toBaselineOf="@+id/dinner_btn"
                app:layout_constraintEnd_toStartOf="@+id/dinner_btn"
                app:strokeColor="#232323"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/dessert_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#131313"
                android:text="@string/dessert"
                android:textColor="#FE7501"
                app:layout_constraintEnd_toEndOf="@+id/dinner_btn"
                app:layout_constraintTop_toBottomOf="@+id/dinner_btn"
                app:strokeColor="#232323"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/food_cost_btn"
                android:layout_width="319dp"
                android:layout_height="41dp"
                android:layout_marginTop="107dp"
                android:layout_marginEnd="14dp"
                android:layout_weight="1"
                android:backgroundTint="#131313"
                android:text="@string/meal_cost_word"
                android:textColor="#FE7501"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:strokeColor="#232323"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="378dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:text="@string/register_button"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/place_btn"
                app:layout_constraintStart_toStartOf="@+id/picture_btn"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/button17"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="37dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:backgroundTint="#131313"
                android:text="@string/meal_photo_word"
                android:textColor="#FE7501"
                app:layout_constraintBottom_toTopOf="@+id/button9"
                app:layout_constraintEnd_toEndOf="@+id/place_btn"
                app:layout_constraintStart_toStartOf="@+id/place_btn"
                app:layout_constraintTop_toTopOf="@+id/food_review_btn"
                app:strokeColor="#232323"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/picture_btn"
                android:layout_width="0dp"
                android:layout_height="156dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_weight="1"
                android:backgroundTint="#131313"
                android:text="@string/meal_photo_word"
                android:textColor="#FE7501"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="#232323"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/place_btn"
                android:layout_width="319dp"
                android:layout_height="41dp"
                android:layout_marginTop="63dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="58dp"
                android:layout_weight="1"
                android:backgroundTint="#131313"
                android:text="@string/choose_place_words"
                android:textColor="#FE7501"
                app:layout_constraintBottom_toTopOf="@+id/food_name_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/dessert_btn"
                app:strokeColor="#232323"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/meal_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#131313"
                android:text="@string/meal"
                android:textColor="#FE7501"
                app:layout_constraintBaseline_toBaselineOf="@+id/caffe_btn"
                app:layout_constraintStart_toStartOf="@+id/textView10"
                app:strokeColor="#232323"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/caffe_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginBottom="31dp"
                android:layout_weight="1"
                android:backgroundTint="#131313"
                android:text="@string/cafe"
                android:textColor="#FE7501"
                app:layout_constraintBottom_toTopOf="@+id/dinner_btn"
                app:layout_constraintStart_toEndOf="@+id/meal_btn"
                app:strokeColor="#232323"
                app:strokeWidth="2dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/type_of_meal"
                android:textColor="#FE7501"
                app:layout_constraintStart_toStartOf="@+id/meal_btn"
                app:layout_constraintTop_toBottomOf="@+id/meal_btn" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:text="@string/choose_meal"
                android:textColor="#FE7501"
                app:layout_constraintBottom_toTopOf="@+id/meal_btn"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="11dp"
                android:layout_weight="1"
                android:text="@string/name_meal"
                android:textColor="#FE7501"
                app:layout_constraintBottom_toTopOf="@+id/food_name_edit"
                app:layout_constraintStart_toStartOf="@+id/food_name_edit" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/meal_cost"
                android:textColor="#FE7501"
                app:layout_constraintStart_toStartOf="@+id/food_name_edit"
                app:layout_constraintTop_toBottomOf="@+id/food_name_edit" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:text="@string/meal_photo"
                android:textColor="#FE7501"
                app:layout_constraintBottom_toTopOf="@+id/picture_btn"
                app:layout_constraintStart_toStartOf="@+id/picture_btn" />

            <TextView
                android:id="@+id/food_review_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="69dp"
                android:layout_weight="1"
                android:text="@string/meal_evaluation"
                android:textColor="#FE7501"
                app:layout_constraintStart_toStartOf="@+id/button17"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="45dp"
                android:layout_weight="1"
                android:text="@string/meal_emoji"
                android:textColor="#FE7501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/picture_btn" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="72dp"
                android:layout_weight="1"
                android:text="@string/meal_time"
                android:textColor="#FE7501"
                app:layout_constraintStart_toStartOf="@+id/food_cost_btn"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:text="@string/choose_meal"
                android:textColor="#FE7501"
                app:layout_constraintBottom_toTopOf="@+id/place_btn"
                app:layout_constraintStart_toStartOf="@+id/place_btn" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="46dp"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textColor="#FE7501"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView10"
                app:layout_constraintStart_toStartOf="@+id/textView10"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/food_name_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginTop="114dp"
                android:ems="10"
                android:text="@string/meal_name_word"
                android:textColor="#FE7501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dessert_btn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_weight="1"></FrameLayout>

</LinearLayout>